{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testEnvironmentOptions": {
    "jest-playwright": {
      "browsers": ["chromium", "firefox"],
      "launchOptions": {}
    }
  },
  "testMatch": ["<rootDir>/test/**/*.spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}
